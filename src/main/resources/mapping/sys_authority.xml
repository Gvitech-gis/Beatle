   <insert id="addone" parameterType="org.gt.bean.sys_authority" >
    
   INSERT INTO sys_authority
            (rolemodelid,
             roleid,
             modelid,
             type,
             fieldname)
    values (
    UUID()
    ,#{roleid,jdbcType=VARCHAR}
